@using DeliveryService.DataLayer.Services.Models
@model ApplicationUser

<h2>Login Cliente</h2>
<form method="post" asp-action="Login">
    <div class="form-group">
        <label for="userName">Nome Utente</label>
        <input type="text" class="form-control" id="userName" asp-for="UserName" required />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" asp-for="Password" required />
    </div>
    <div class="form-group">
        <input type="checkbox" id="rememberMe" asp-for="RememberMe" />
        <label for="rememberMe">Ricordami</label>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

@if (ViewBag.LoginError != null)
{
    <div class="alert alert-danger">@ViewBag.LoginError</div>
}
