@model IEnumerable<DeliveryService.DataLayer.Entities.Cliente>

<h2>Lista Clienti</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Codice Fiscale</th>
            <th>Partita IVA</th>
            <th>Tipo Cliente</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.CodiceFiscale</td>
                <td>@cliente.PartitaIVA</td>
                <td>@(cliente.TipoCliente == "Privato" ? "Privato" : "Azienda")</td>
            </tr>
        }
    </tbody>
</table>
