<!-- Sezione per mostrare le statistiche dei biglietti venduti per ogni sala -->
<div id="statistics">
    <!-- Lista non ordinata per elencare le statistiche delle sale -->
    <ul>
        <!-- Elemento della lista per SALA NORD -->
        <li>
            SALA NORD:
            <!-- Span per mostrare il totale dei biglietti venduti per SALA NORD -->
            <span id="nord-totale">@Cinema.SaleBigliettiVenduti["SALA NORD"]</span>
            <!-- Span per mostrare il numero di biglietti ridotti venduti per SALA NORD -->
            (Ridotti: <span id="nord-ridotti">@Cinema.SaleBigliettiRidotti["SALA NORD"]</span>)
        </li>

        <!-- Elemento della lista per SALA EST -->
        <li>
            SALA EST:
            <!-- Span per mostrare il totale dei biglietti venduti per SALA EST -->
            <span id="est-totale">@Cinema.SaleBigliettiVenduti["SALA EST"]</span>
            <!-- Span per mostrare il numero di biglietti ridotti venduti per SALA EST -->
            (Ridotti: <span id="est-ridotti">@Cinema.SaleBigliettiRidotti["SALA EST"]</span>)
        </li>

        <!-- Elemento della lista per SALA SUD -->
        <li>
            SALA SUD:
            <!-- Span per mostrare il totale dei biglietti venduti per SALA SUD -->
            <span id="sud-totale">@Cinema.SaleBigliettiVenduti["SALA SUD"]</span>
            <!-- Span per mostrare il numero di biglietti ridotti venduti per SALA SUD -->
            (Ridotti: <span id="sud-ridotti">@Cinema.SaleBigliettiRidotti["SALA SUD"]</span>)
        </li>
    </ul>
</div>
