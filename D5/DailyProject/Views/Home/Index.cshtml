@model IEnumerable<DailyProject.Classi.Articolo>

@{
    ViewData["Title"] = "Vetrina";
}

<!-- Immagine di vetrina CAROSELLO -->
<div id="vetrinaCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://timelinecovers.pro/facebook-cover/download/wilson-tennis-ball-facebook-cover.jpg" class="d-block w-100" alt="Vetrina 1">
        </div>
        <div class="carousel-item">
            <img src="https://cdn.create.vista.com/downloads/df804c47-8d2d-47d3-8891-4a9a428b0ae2_640.jpeg" class="d-block w-100" alt="Vetrina 2">
        </div>
        <div class="carousel-item">
            <img src="https://www.extreme-tennis.fr/modules/prestatemplatev2/page-builder/wp-content/uploads/topguideshoes.jpg" class="d-block w-100" alt="Vetrina 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#vetrinaCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#vetrinaCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container">
    <div class="row row-cols-3">
        @foreach (var articolo in Model)
        {
            <div class="col">
                <div class="card w-100 shadow-sm" onclick="location.href='@Url.Action("Dettagli", "Home", new { id = articolo.Id })'">
                    <img src="@articolo.ImmagineCopertina" class="card-img-top" alt="@articolo.Nome">
                    <div class="card-body">
                        <h5 class="card-title">@articolo.Nome</h5>
                        <p class="card-text">@articolo.Prezzo €</p>
                    </div>
                </div>
            </div>
        }

        <div class="col">
            <div class="card w-100 shadow-sm" onclick="location.href='@Url.Action("CreaProdotto", "Home")'">
                <div class="card-body d-flex align-items-center justify-content-center" style="height: 200px;">
                    <h1 class="text-primary">+</h1>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Aggiungi Prodotto</h5>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .vetrina img {
        width: 100%;
        height: auto;
    }

    .carousel-item img {
        width: 100%;
        height: 500px; 
        object-fit: cover; 
    }
    .card-img-top {
        height: 200px;
        object-fit: cover;
    }
    .card {
        margin-top: 20px;
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
</style>