@model DailyProject.Classi.Articolo

@{
    ViewData["Title"] = Model.Nome;
}

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 600px;">
        <img src="@Model.ImmagineCopertina" alt="@Model.Nome" class="card-img-top img-fluid">
        <div class="card-body">
            <h2 class="card-title">@Model.Nome</h2>
            <p class="card-text">Prezzo: @Model.Prezzo €</p>
            <p class="card-text">@Model.Descrizione</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mt-3">Torna alla Vetrina</a>
        </div>
    </div>
</div>

<div class="container mt-4">
    <h2>@Model.Nome</h2>
    <p>Prezzo: @Model.Prezzo €</p>
    <p>@Model.Descrizione</p>
    <img src="@Model.ImmagineCopertina" alt="@Model.Nome" class="img-fluid mb-2" />
    <a href="@Url.Action("ModificaProdotto", "Home", new { id = Model.Id })" class="btn btn-primary mt-3">Modifica Prodotto</a>
    <form asp-action="EliminaProdotto" method="post" style="display:inline;">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger mt-3">Elimina</button>
    </form>
</div>

<style>
    .card-img-top {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }

    .card {
        max-width: 600px;
    }
</style>
