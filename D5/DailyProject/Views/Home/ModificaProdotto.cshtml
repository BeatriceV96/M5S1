@model DailyProject.Models.ArticoloViewModel


@{
    ViewData["Title"] = "Modifica Prodotto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ModificaProdotto" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImmagineCopertina">Immagine Copertina</label>
        <input asp-for="ImmagineCopertina" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descrizione"></label>
        <textarea asp-for="Descrizione" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Prezzo"></label>
        <input asp-for="Prezzo" class="form-control" type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<DailyProject.Classi.TipoArticolo>()" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Salva modifiche</button>
</form>

<style>
    .form-group {
        margin-bottom: 15px;
    }
</style>
