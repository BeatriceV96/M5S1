@model Tuple<IEnumerable<EsercitazioneSettimanale1.Models.TrasgressoreEntity>, EsercitazioneSettimanale1.Models.TrasgressoreEntity>

@{
    ViewData["Title"] = "Trasgressore";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2>Elenco e Creazione/Modifica Trasgressori</h2>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">@((Model.Item2.IdAnagrafica == 0) ? "Crea Trasgressore" : "Modifica Trasgressore")</h3>
                    <form asp-action="@(Model.Item2.IdAnagrafica == 0 ? "Create" : "EditConfirmed")" method="post">
                        <input type="hidden" asp-for="Item2.IdAnagrafica" />
                        <div class="form-group">
                            <label asp-for="Item2.Cognome" class="control-label"></label>
                            <input asp-for="Item2.Cognome" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Item2.Nome" class="control-label"></label>
                            <input asp-for="Item2.Nome" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Item2.Indirizzo" class="control-label"></label>
                            <input asp-for="Item2.Indirizzo" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Item2.Citta" class="control-label"></label>
                            <input asp-for="Item2.Citta" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Item2.CAP" class="control-label"></label>
                            <input asp-for="Item2.CAP" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Item2.CodFisc" class="control-label"></label>
                            <input asp-for="Item2.CodFisc" class="form-control" />
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="@(Model.Item2.IdAnagrafica == 0 ? "Crea" : "Salva Modifiche")" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h3>Elenco Trasgressori</h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Cognome</th>
                                <th>Nome</th>
                                <th>Indirizzo</th>
                                <th>Città</th>
                                <th>CAP</th>
                                <th>Codice Fiscale</th>
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trasgressore in Model.Item1)
                            {
                                <tr>
                                    <td>@trasgressore.Cognome</td>
                                    <td>@trasgressore.Nome</td>
                                    <td>@trasgressore.Indirizzo</td>
                                    <td>@trasgressore.Citta</td>
                                    <td>@trasgressore.CAP</td>
                                    <td>@trasgressore.CodFisc</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@trasgressore.IdAnagrafica" class="btn btn-warning">Modifica</a>
                                        <a asp-action="Delete" asp-route-id="@trasgressore.IdAnagrafica" class="btn btn-danger">Cancella</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }

    .form-group label {
        font-weight: bold;
    }

    .text-center {
        text-align: center;
    }
</style>
