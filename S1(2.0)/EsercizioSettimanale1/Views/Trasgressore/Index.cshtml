@model IEnumerable<EsercitazioneSettimanale1.Models.TrasgressoreViewModel>

@{
    ViewData["Title"] = "Trasgressore";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2>Elenco e Creazione/Modifica Trasgressori</h2>
    </div>
    <div class="mb-3 text-right">
        <a class="btn btn-primary" asp-action="Create">Crea</a>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <!-- Sezione vuota per eventuali utilizzi futuri -->
        </div>
        <div class="col-md-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Elenco Trasgressori</h3>
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Cognome</th>
                                <th>Nome</th>
                                <th>Indirizzo</th>
                                <th>Città</th>
                                <th>CAP</th>
                                <th>Codice Fiscale</th>
                                <th>Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trasgressore in Model)
                            {
                                <tr>
                                    <td>@trasgressore.Cognome</td>
                                    <td>@trasgressore.Nome</td>
                                    <td>@trasgressore.Indirizzo</td>
                                    <td>@trasgressore.Citta</td>
                                    <td>@trasgressore.CAP</td>
                                    <td>@trasgressore.CodFisc</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

    .form-group label {
        font-weight: bold;
    }

    .text-center {
        text-align: center;
    }

    .btn {
        margin-right: 5px;
    }
</style>
